@startuml
entity User {
    *id : UUID
    --
    name : String
    email : String
    role : String
}

entity Post {
    *id : UUID
    --
    title : String
    content : Text
    user_id : UUID
}

entity Comment {
    *id : UUID
    --
    text : Text
    user_id : UUID
    post_id : UUID
}

entity Statistic {
    *id : UUID
    --
    post_id : UUID
    views : Integer
    likes : Integer
    comments : Integer
}

User ||--o{ Post : writes
User ||--o{ Comment : writes
Post ||--o{ Comment : has
Post ||--o{ Statistic : tracked_by
@enduml